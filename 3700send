#!/usr/bin/env -S python3 -u

import argparse
import socket
import time
import json
import select
import struct
import sys
import math

DATA_SIZE = 1375

# corruption - check sent sequence data == ack sequence date
# if not, resend


class Sender:
    _data = []
    _parsed = False
    _buffer = []
    _sequence = 0
    _acked = []
    _advertised_window = 8
    _rtt = 1

    _cwnd = 1
    _ssthresh = _advertised_window

    def __init__(self, host, port):
        self.host = host
        self.remote_port = int(port)
        self.log("Sender starting up using port %s" % self.remote_port)
        self.socket = socket.socket(socket.AF_INET, socket.SOCK_DGRAM)
        self.socket.bind(('0.0.0.0', 0))
        self.waiting = False

    def log(self, message):
        sys.stderr.write(message + "\n")
        sys.stderr.flush()

    def send(self, message):
        self.socket.sendto(json.dumps(message).encode(
            'utf-8'), (self.host, self.remote_port))

    def calc_rtt(self, new_rtt):
        alpha = 0.875
        rtt = ((alpha * self._rtt) + ((1 - alpha) * new_rtt))
        self._rtt = self._rtt if rtt < 0 else rtt
        self.log(f"new rtt: {self._rtt}")

    def run(self):
        while True:
            sockets = [self.socket, sys.stdin] if not self.waiting else [
                self.socket]

            # check if anything must be resent
            if self.waiting:
                current_time = time.time()
                for entry in self._buffer[:]:
                    if (current_time - entry['time_sent']) > 2 * self._rtt:
                        self.log("Resending message %i" %
                                 entry['sequence'])
                        entry['time_sent'] = current_time
                        entry['cwnd'] = 1
                        self.send(entry)

                        # packet timed out so resend and adjust cwnd
                        self._ssthresh = int(self._cwnd) / 2
                        self._cwnd = 1

            socks = select.select(sockets, [], [], 0.1)[0]
            for conn in socks:
                if conn == self.socket:
                    k, addr = conn.recvfrom(65535)

                    try:
                        msg = k.decode('utf-8')
                        msg = json.loads(msg)
                        sequence = msg['sequence']
                        self._advertised_window = 0 if msg['adv_window'] < 0 else msg['adv_window']

                        if (self._cwnd < self._ssthresh):
                            self._cwnd += 1
                        else:
                            self._cwnd += 1 / self._cwnd

                        self.log(f"cwnd: {self._cwnd}")

                        self.log("Received message %i" % sequence)

                        if sequence not in self._acked:
                            for entry in self._buffer[:]:
                                if entry['sequence'] == sequence:
                                    self.calc_rtt(
                                        msg['time_sent'] - entry['time_sent'])
                                    self._buffer.remove(entry)
                                    self._acked.append(sequence)
                                    break

                        if len(self._buffer) == 0:
                            self.waiting = False
                    except ValueError:
                        pass
                elif conn == sys.stdin:
                    # parse all data
                    if not self._parsed:
                        self.load_data()

                    # add to buffer until window is full
                    window = min(int(self._advertised_window), int(self._cwnd))
                    for _ in range(window):
                        if len(self._data) == 0 and len(self._buffer) == 0:
                            self.log("All done!")
                            sys.exit(0)

                        if len(self._data) == 0:
                            break

                        msg = self._data.pop(0)
                        msg['time_sent'] = time.time()
                        msg['cwnd'] = window
                        self._buffer.append(msg)
                        self.send(msg)
                        self.log("Sending message %i" % msg['sequence'])

                    self.waiting = True
        return

    def load_data(self):
        data = sys.stdin.read(DATA_SIZE)
        while (len(data) > 0):
            msg = {"type": "msg", "data": data,
                   "sequence": self._sequence, "time_sent": time.time(),
                   "checksum": self.checksum(data), "cwnd": self._cwnd}
            self._data.append(msg)
            self._sequence += 1
            data = sys.stdin.read(DATA_SIZE)
        self._parsed = True

    def checksum(self, msg):
        return sum(msg.encode())


if __name__ == "__main__":
    parser = argparse.ArgumentParser(description='send data')
    parser.add_argument('host', type=str, help="Remote host to connect to")
    parser.add_argument('port', type=int, help="UDP port number to connect to")
    args = parser.parse_args()
    sender = Sender(args.host, args.port)
    sender.run()
